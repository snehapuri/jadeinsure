<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/app_logo"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/country_of_business"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/countrySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/spinner_background"
            android:padding="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/select_insurance_type"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Jewellery & Gold -->
        <androidx.cardview.widget.CardView
            android:id="@+id/jewelryGoldCard"
            style="@style/InsuranceCardStyle"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout style="@style/InsuranceCardContent">
                <ImageView
                    style="@style/InsuranceCardIcon"
                    android:src="@drawable/ic_jewelry"
                    android:contentDescription="@string/jewelry_gold_icon" />
                <TextView
                    style="@style/InsuranceCardText"
                    android:text="@string/jewelry_gold"
                    android:textColor="@color/text_primary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Diamond & Precious Stones -->
        <androidx.cardview.widget.CardView
            android:id="@+id/diamondStonesCard"
            style="@style/InsuranceCardStyle"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout style="@style/InsuranceCardContent">
                <ImageView
                    style="@style/InsuranceCardIcon"
                    android:src="@drawable/ic_diamond"
                    android:contentDescription="@string/diamond_stones_icon" />
                <TextView
                    style="@style/InsuranceCardText"
                    android:text="@string/diamond_stones"
                    android:textColor="@color/text_primary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Money Services -->
        <androidx.cardview.widget.CardView
            android:id="@+id/moneyServicesCard"
            style="@style/InsuranceCardStyle"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout style="@style/InsuranceCardContent">
                <ImageView
                    style="@style/InsuranceCardIcon"
                    android:src="@drawable/ic_money"
                    android:contentDescription="@string/money_services_icon" />
                <TextView
                    style="@style/InsuranceCardText"
                    android:text="@string/money_services"
                    android:textColor="@color/text_primary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Luxury Watches -->
        <androidx.cardview.widget.CardView
            android:id="@+id/luxuryWatchesCard"
            style="@style/InsuranceCardStyle"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout style="@style/InsuranceCardContent">
                <ImageView
                    style="@style/InsuranceCardIcon"
                    android:src="@drawable/ic_watch"
                    android:contentDescription="@string/luxury_watches_icon" />
                <TextView
                    style="@style/InsuranceCardText"
                    android:text="@string/luxury_watches"
                    android:textColor="@color/text_primary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Pawnbrokers -->
        <androidx.cardview.widget.CardView
            android:id="@+id/pawnbrokersCard"
            style="@style/InsuranceCardStyle"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout style="@style/InsuranceCardContent">
                <ImageView
                    style="@style/InsuranceCardIcon"
                    android:src="@drawable/ic_pawnbroker"
                    android:contentDescription="@string/pawnbrokers_icon" />
                <TextView
                    style="@style/InsuranceCardText"
                    android:text="@string/pawnbrokers"
                    android:textColor="@color/text_primary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>